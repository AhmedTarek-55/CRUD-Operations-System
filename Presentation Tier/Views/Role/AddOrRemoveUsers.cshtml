@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    var RoleId = ViewBag.RoleId;
}

<h1>Add Or Remove Users</h1>

<form class="my-3" asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-RoleId="@RoleId" enctype="multipart/form-data">
    @for(var i = 0; i < Model.Count(); i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsChecked" class="form-check-input" type="checkbox" />
            <label asp-for="@Model[i].IsChecked" class="form-check-label">@Model[i].UserName</label>
        </div>

        <input hidden asp-for="@Model[i].UserId">
        <input hidden asp-for="@Model[i].UserName">
    }

    <div class="my-3">
        <input type="submit" value="Update" class="btn btn-success" />
        <a class="btn btn-light" asp-action="Update" asp-controller="Role" asp-route-Id="@RoleId">Cancel</a>
    </div>
</form>