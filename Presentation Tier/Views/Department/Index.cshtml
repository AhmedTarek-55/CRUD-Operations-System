@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Deparments</h1>
<br/>

<a asp-action="Create" class="btn btn-primary">Add New Department</a>

<br/>
<br />

@if (TempData["Success"] is not null)
{
    <div class="alert alert-danger">
        <h3>@TempData["Success"]</h3>
    </div>
}

@if (Model?.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(dept => dept.Code)</th>
                <th scope="col">@Html.DisplayNameFor(dept => dept.Name)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Department" asp-action="Details" asp-route-Id="@item.Id">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Department" asp-action="Update" asp-route-Id="@item.Id">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-Id="@item.Id">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class ="alert alert-warning">
        <h3>No Departments Found</h3>
    </div>
}