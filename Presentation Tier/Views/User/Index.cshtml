@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<br />
<br />

<form class="form-inline " asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8">
            <input class="form-control form-control-sm mr-3 w-75" name="SearchValue" type="text" placeholder="Search" aria-label="Search">
            <i class="fas fa-search" aria-hidden="true"></i>
        </div>
        <div class="col-sm-3">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>


@if (Model?.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(user => user.Id)</th>
                <th scope="col">@Html.DisplayNameFor(user => user.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(user => user.Email)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <partial name="Partial Views/_ButtonsPartialView" model="item.Id.ToString()"/>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="alert alert-warning">
        <h3>No Users Found</h3>
    </div>
}
